<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.storeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoreApp">
        <activity android:name=".views.customer.BagActivity"/>
        <activity
            android:name=".views.customer.CustomerHome"
            android:label="@string/title_activity_customer_home"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".views.ErrorActivity" />
        <activity android:name=".views.ForgotActivity" />
        <activity android:name=".views.DetailsActivity" />
        <activity
            android:name=".views.SignUpActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".views.LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>